<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Edit Mahasiswa</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Navbar -->
    <div class="container">
      <div class="row"><%- include('../partials/_nav') %></div>
    </div>

    <!-- Form Edit Mahasiswa -->
    <div class="container mt-4">
      <h2>Edit Mahasiswa</h2>

      <!-- Flash Messages -->
      <% if (messages.error) { %>
      <div class="alert alert-danger"><%= messages.error %></div>
      <% } %> 
      
      <% if (messages.success) { %>
      <div class="alert alert-success"><%= messages.success %></div>
      <% } %>

      <div class="row">
        <div class="col-md-8">
          <form action="/mahasiswa/update/<%= data.id_mahasiswa %>" method="post">
            
            <!-- Nama -->
            <div class="mb-3">
              <label for="nama" class="form-label">Nama</label>
              <input
                type="text"
                class="form-control"
                name="nama"
                id="nama"
                value="<%= data.nama %>"
                required
              />
            </div>

            <!-- NRP -->
            <div class="mb-3">
              <label for="nrp" class="form-label">NRP</label>
              <input
                type="text"
                class="form-control"
                name="nrp"
                id="nrp"
                value="<%= data.nrp %>"
                required
              />
            </div>

            <!-- Tanggal Lahir -->
            <div class="mb-3">
              <label for="tgl_lahir" class="form-label">Tanggal Lahir</label>
              <input
                type="date"
                class="form-control"
                name="tgl_lahir"
                id="tgl_lahir"
                value="<%= data.tgl_lahir %>"
                required
              />
            </div>

            <!-- Jenis Kelamin -->
            <div class="mb-3">
              <label for="jenis_kelamin" class="form-label">Jenis Kelamin</label>
              <select class="form-select" name="jenis_kelamin" id="jenis_kelamin" required>
                <option value="Laki-laki" <% if (data.jenis_kelamin === 'Laki-laki') { %> selected <% } %>>Laki-laki</option>
                <option value="Perempuan" <% if (data.jenis_kelamin === 'Perempuan') { %> selected <% } %>>Perempuan</option>
              </select>
            </div>

            <!-- Agama -->
            <div class="mb-3">
              <label for="agama" class="form-label">Agama</label>
              <input
                type="text"
                class="form-control"
                name="agama"
                id="agama"
                value="<%= data.agama %>"
                required
              />
            </div>

            <!-- Hobi -->
            <div class="mb-3">
              <label for="hoby" class="form-label">Hobi</label>
              <input
                type="text"
                class="form-control"
                name="hoby"
                id="hoby"
                value="<%= data.hoby %>"
                required
              />
            </div>

            <!-- Alamat -->
            <div class="mb-3">
              <label for="alamat" class="form-label">Alamat</label>
              <textarea
                class="form-control"
                name="alamat"
                id="alamat"
                rows="3"
                required
              ><%= data.alamat %></textarea>
            </div>

            <!-- Program Studi -->
            <div class="mb-3">
              <label for="program_studi" class="form-label">Program Studi</label>
              <input
                type="text"
                class="form-control"
                name="program_studi"
                id="program_studi"
                value="<%= data.program_studi %>"
                required
              />
            </div>

            <button type="submit" class="btn btn-success">Update</button>
            <a href="/mahasiswa" class="btn btn-secondary">Batal</a>
          </form>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
